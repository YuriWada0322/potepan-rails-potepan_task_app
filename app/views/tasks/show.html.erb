<h3>スケジュール詳細</h3>
 
    <table>
      <tr>
        <th>タイトル</th>
        <td><%= @task.title %></td>
      </tr>
      <tr>
        <th>開始日</th>
        <td><%= @task.start.to_s(:datetime_jp) %></td>
      </tr>
      <tr>
        <th>終了日</th>
        <td><%= @task.end.to_s(:datetime_jp) %></td>
      </tr>
      <tr>
        <th>終日</th>
        <td><%= @task.allday ? "○": "" %></td>
      </tr>
      <th>スケジュールメモ</th>
        <td><%= @task.memo %></td>
      </tr>
    </table>
 
    <div>
      <ul>
        <li><%= link_to "スケジュール一覧に戻る", tasks_index_path %></li>
      </ul>
    </div>