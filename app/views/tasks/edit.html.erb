<h3>スケジュール編集</h3>

<%= render "shared/error", obj: @tasks %>
 
<%= form_for @tasks do |f| %>

<table>
    <tr>
        <th><%= f.label :title ,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
    </tr>

    <tr>
        <th><%= f.label :start ,"開始日" %></th>
        <td><%= f.datetime_field :start %></td>
    </tr>

    <tr>
        <th><%= f.label :end ,"終了日" %></th>
        <td><%= f.datetime_field :end %></td>
    </tr>

    <tr>
        <th><%= f.label :allday ,"終日" %></th>
        <td><%= f.check_box :allday %><br>終日の場合はチェックを入れます</td>
    </tr>

    <tr>
        <th><%= f.label :memo ,"スケジュールメモ" %></th>
        <td><%= f.text_area :memo, class:"posts-content" %></td>
    </tr>
</table>

<div>
    <ul>
        <li><%= f.submit "編集を完了する" %></li>
        <li><%= link_to "スケジュール情報一覧に戻る", tasks_index_path %></li>
    </ul>
  </div>
<% end %>